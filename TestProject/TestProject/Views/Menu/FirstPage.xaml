<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestProject.Views.Menu.FirstPage"
             xmlns:translator="clr-namespace:TestProject.Helpers">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="5*" />
                <RowDefinition Height="5*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label FontSize="30" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" TextColor="White" Grid.Row="0" Grid.Column="0" BackgroundColor="Black" Text="{translator:Translate HelloMassage}"  />
            <Button Clicked="Handle_Clicked" Margin="5" FontSize="19" BorderColor="Black" BorderWidth="1" Grid.Row="1" Grid.Column="0" Text="{translator:Translate HelloMassage}" TextColor="Black"  />
        </Grid>        
    </ContentPage.Content>
</ContentPage>