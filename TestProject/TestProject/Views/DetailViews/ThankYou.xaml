<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestProject.Views.DetailViews.ThankYou">
	<Label Text="{Binding MainText}" VerticalOptions="Center" HorizontalOptions="Center" />

    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <Image Source="done.png"/>
        <Label Text="You have successfully completed the order!" FontSize="Small"/>
        <Label Text="Vist us and pickup your order" FontSize="Micro"/>
        <Button Text="Back to Main Menu" Clicked="Menu_btn_Clicked"/>
    </StackLayout>

</ContentPage>