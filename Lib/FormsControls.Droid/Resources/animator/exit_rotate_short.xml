<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:shareInterpolator="false">
    <rotate
        android:fromDegrees="0" android:toDegrees="180"
        android:pivotX="50%" android:pivotY="50%" 
        android:duration="@integer/animation_duration_short"/>
    <scale
        android:fromXScale="1" android:toXScale="0.1"
        android:fromYScale="1" android:toYScale="0.1"
        android:pivotX="50%" android:pivotY="50%" 
        android:duration="@integer/animation_duration_short"/>
    <alpha
        android:fromAlpha="1" android:toAlpha="0"
        android:duration="@integer/animation_duration_short"/>
</set>